  <script>
    // Mobile nav toggle
    const nav = document.getElementById('nav');
    const navToggle = document.getElementById('navToggle');
    navToggle?.addEventListener('click',()=> nav.classList.toggle('open'));

    // Header subtle shadow on scroll
    const header = document.querySelector('.site-header');
    const setHead = ()=> header.style.boxShadow = window.scrollY>8 ? '0 6px 20px rgba(17,17,17,.06)' : 'none';
    window.addEventListener('scroll', setHead); setHead();

    // FAQ accordion
    document.querySelectorAll('.faq .qa').forEach(q=>{
      const btn=q.querySelector('button'); const ans=q.querySelector('.ans');
      btn.addEventListener('click',()=>{
        const open=q.classList.toggle('open');
        btn.setAttribute('aria-expanded', String(open));
      });
    });

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
